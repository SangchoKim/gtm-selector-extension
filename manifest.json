{
  "manifest_version": 3,
  "name": "GTM 셀렉터 헬퍼",
  "version": "1.0.0",
  "description": "Google Tag Manager용 CSS 셀렉터를 쉽게 생성하는 도구",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "GTM 셀렉터 헬퍼",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.css", "popup-detached.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
